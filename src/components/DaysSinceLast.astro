        <div class={`text-lg sm:text-xl md:text-2xl font-bold ${statusInfo.color} tracking-wider`}>
          {daysSince === 1 ? 'DAY' : 'DAYS'} SINCE LAST
        </div>
        <div class="text-green-400 text-base sm:text-lg md:text-xl font-mono tracking-widest">
          [{activityType}]
